<html>
    <head>
        <script type="text/javascript" src="{{ url_for('static', filename='js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ url_for('static', filename='js/underscore.js') }}"></script>
        <script type="text/javascript" src="{{ url_for('static', filename='js/backbone.js') }}"></script>
        <script type="text/javascript" src="{{ url_for('static', filename='js/poc.js') }}"></script>
        <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/poc.css') }}" />
        <link href='http://fonts.googleapis.com/css?family=Ubuntu+Mono:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    </head>
    <body>
        <div id="content">
            <div id="model-list-container" class="spiral-obj-container">
                <div class="block-header">Models</div>
                <ul class="model-list"></ul>
            </div>

            <div id="model-details-container" class="spiral-obj-container">
            </div>

            <div id="serializer-list-container" class="spiral-obj-container">
                <div class="block-header">Serializers</div>
                <ul class="serializer-list"></ul>
                <a class="write-link" href="#">Write</a>
            </div>

            <script type="text/html" id="model-li-tmpl">
                <%= name %>
            </script>

            <script type="text/html" id="serializer-checkbox-tmpl">
                <input type="checkbox" class="serializer" /><%= name %>
            </script>

            <script type="text/html" id="model-field-tmpl">
                <%= name %>
            </script>

            <script type="text/html" id="model-details-tmpl">
                <div class="block-header"><%= name %></div>
                <ul class="model-fields"></ul>
            </script>
        </div>
    </body>
</html>
